@model UserPost
<h2 style="text-align: center;">Tell the Community What is on Your Mind</h2>

<div style="margin: 0px auto;">
    <form style="align-items: center;" action="/ProcessCreatePost" method="post">
        <input type="hidden" asp-for="UserId" value="@ViewBag.LoggedUser.UserId">
        <div class="form-group">
            <textarea asp-for="PostContent" id="" cols="80" rows="7">Post Content</textarea>  <br>
            <span asp-validation-for="PostContent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create Post">
        </div>
    </form>
</div>